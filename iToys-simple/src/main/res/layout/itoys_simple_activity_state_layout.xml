<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/simple_btn_state_empty"
            style="@style/IToysView.MediumButton"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:text="@string/simple_str_main_state_empty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/simple_btn_state_error"
            style="@style/IToysView.MediumButton"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="@string/simple_str_main_state_error"
            app:layout_constraintStart_toEndOf="@+id/simple_btn_state_empty"
            app:layout_constraintTop_toTopOf="@id/simple_btn_state_empty" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
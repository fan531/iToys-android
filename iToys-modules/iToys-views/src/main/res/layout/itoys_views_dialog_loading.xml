<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/views_loading_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/itoys_rectangle_loading_dialog_background"
    android:paddingHorizontal="28dp"
    android:paddingBottom="28dp">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/views_loading_view"
        style="@style/SpinKitView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:SpinKit_Color="@color/theme_colorful_white"
        app:SpinKit_Style="Circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/views_iv_loading"
        style="@style/SpinKitView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/views_tv_loading_text"
        style="@style/IToysView.Text"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:text="@string/views_str_loading"
        android:textColor="@color/theme_colorful_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/views_loading_view" />
</androidx.constraintlayout.widget.ConstraintLayout>
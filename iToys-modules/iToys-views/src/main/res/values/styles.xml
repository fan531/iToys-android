<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IToysView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IToysView.match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Text -->

    <style name="IToysView.Text" parent="IToysView">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/theme_colorful_2E3234</item>
    </style>

    <style name="IToysView.MediumText" parent="IToysView.Text">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="IToysView.BoldText" parent="IToysView.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button -->

    <style name="IToysView.Button" parent="IToysView.Text"/>

    <style name="IToysView.MediumButton">
        <item name="android:background">@drawable/theme_rectangle_btn_primary</item>
        <item name="android:textColor">@color/theme_colorful_white</item>
    </style>
</resources>